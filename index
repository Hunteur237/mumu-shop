                    category: 4,
                    isNew: false
                },
                { 
                    id: 5, 
                    name: "Ensemble Tailleur Femme", 
                    price: 109.99, 
                    oldPrice: 149.99, 
                    image: "https://images.unsplash.com/photo-1551232864-3f0890e580d9?ixlib=rb-1.2.1&auto=format&fit=crop&w=600&q=80",
                    category: 1,
                    isNew: false
                },
                { 
                    id: 6, 
                    name: "Perruque Noire Longue", 
                    price: 139.99, 
                    image: "https://images.unsplash.com/photo-1522337360788-8b13dee7a37e?ixlib=rb-1.2.1&auto=format&fit=crop&w=600&q=80",
                    category: 3,
                    isNew: true
                }
            ],
            
            users: [],
            
            currentUser: null,
            
            // Méthodes pour simuler un backend
            registerUser: function(userData) {
                const userExists = this.users.some(user => user.email === userData.email);
                if (userExists) {
                    return { success: false, message: "Un compte existe déjà avec cet email" };
                }
                
                if (userData.password !== userData.confirmPassword) {
                    return { success: false, message: "Les mots de passe ne correspondent pas" };
                }
                
                const newUser = {
                    id: Date.now(),
                    name: userData.name,
                    email: userData.email,
                    password: userData.password,
                    cart: []
                };
                
                this.users.push(newUser);
                this.currentUser = newUser;
                return { success: true, user: newUser };
            },
            
            loginUser: function(email, password) {
                const user = this.users.find(user => user.email === email && user.password === password);
                if (user) {
                    this.currentUser = user;
                    return { success: true, user };
                }
                return { success: false, message: "Email ou mot de passe incorrect" };
            },
            
            logoutUser: function() {
                this.currentUser = null;
            },
            
            addToCart: function(userId, productId, quantity = 1) {
                const user = this.users.find(user => user.id === userId);
                if (!user) return false;
                
                const existingItem = user.cart.find(item => item.productId === productId);
                if (existingItem) {
                    existingItem.quantity += quantity;
                } else {
                    const product = this.products.find(p => p.id === productId);
                    if (!product) return false;
                    
                    user.cart.push({
                        productId,
                        quantity,
                        price: product.price,
                        name: product.name,
                        image: product.image
                    });
                }
                
                return true;
            },
            
            updateCartItem: function(userId, productId, quantity) {
                const user = this.users.find(user => user.id === userId);
                if (!user) return false;
                
                const item = user.cart.find(item => item.productId === productId);
                if (!item) return false;
                
                if (quantity <= 0) {
                    user.cart = user.cart.filter(item => item.productId !== productId);
                } else {
                    item.quantity = quantity;
                }
                
                return true;
            },
            
            removeFromCart: function(userId, productId) {
                const user = this.users.find(user => user.id === userId);
                if (!user) return false;
                
                user.cart = user.cart.filter(item => item.productId !== productId);
                return true;
            },
            
            getCart: function(userId) {
                const user = this.users.find(user => user.id === userId);
                return user ? user.cart : [];
            },
            
            getCartTotal: function(userId) {
                const cart = this.getCart(userId);
                return cart.reduce((total, item) => total + (item.price * item.quantity), 0);
            }
        };
        
        // Gestion de l'interface utilisateur
        const UI = {
            // Initialisation
            init: function() {
                this.renderCategories();
                this.renderProducts();
                this.setupEventListeners();
                
                // Vérifier si un utilisateur est connecté (simulation)
                if (backend.currentUser) {
                    this.updateAuthUI();
                }
            },
            
            // Rendu des catégories
            renderCategories: function() {
                const container = document.getElementById('categories-container');
                container.innerHTML = '';
                
                backend.categories.forEach(category => {
                    const categoryElement = document.createElement('div');
                    categoryElement.className = 'category-card';
                    categoryElement.innerHTML = `
                        <img src="${category.image}" alt="${category.name}" class="category-img">
                        <div class="category-info">
                            <h3>${category.name}</h3>
                            <a href="#" class="btn btn-sm" data-category-id="${category.id}">Voir plus</a>
                        </div>
                    `;
                    container.appendChild(categoryElement);
                });
            },
            
            // Rendu des produits
            renderProducts: function(filterCategoryId = null) {
                const container = document.getElementById('products-container');
                container.innerHTML = '';
                
                let productsToDisplay = backend.products;
                if (filterCategoryId) {
                    productsToDisplay = productsToDisplay.filter(product => product.category === filterCategoryId);
                }
                
                productsToDisplay.forEach(product => {
                    const productElement = document.createElement('div');
                    productElement.className = 'product-card';
                    
                    let badges = '';
                    if (product.oldPrice) {
                        badges += `<div class="sale-badge">-${Math.round((1 - product.price / product.oldPrice) * 100)}%</div>`;
                    }
                    if (product.isNew) {
                        badges += `<div class="new-badge">Nouveau</div>`;
                    }
                    
                    productElement.innerHTML = `
                        ${badges}
                        <img src="${product.image}" alt="${product.name}" class="product-img">
                        <div class="product-info">
                            <h3>${product.name}</h3>
                            <div class="product-price">
                                <span class="current-price">${product.price.toFixed(2)}€</span>
                                ${product.oldPrice ? `<span class="old-price">${product.oldPrice.toFixed(2)}€</span>` : ''}
                            </div>
                            <div class="product-actions">
                                <button class="btn btn-sm add-to-cart" data-id="${product.id}" data-name="${product.name}" data-price="${product.price}" data-image="${product.image}">Ajouter</button>
                                <button class="btn btn-sm btn-wishlist"><i class="far fa-heart"></i></button>
                            </div>
                        </div>
                    `;
                    container.appendChild(productElement);
                });
            },
            
            // Mise à jour de l'interface d'authentification
            updateAuthUI: function() {
                const authButtons = document.querySelector('.auth-buttons');
                if (backend.currentUser) {
                    authButtons.innerHTML = `
                        <span style="margin-right: 15px; color: var(--dark);">Bonjour, ${backend.currentUser.name.split(' ')[0]}</span>
                        <button class="btn btn-sm" id="logout-btn">Déconnexion</button>
                    `;
                } else {
                    authButtons.innerHTML = `
                        <button class="btn btn-sm btn-secondary" id="login-btn">Connexion</button>
                        <button class="btn btn-sm" id="register-btn">Inscription</button>
                    `;
                }
            },
            
            // Mise à jour du panier
            updateCart: function() {
                const cartCount = document.querySelector('.cart-count');
                let totalItems = 0;
                
                if (backend.currentUser) {
                    totalItems = backend.getCart(backend.currentUser.id).reduce((total, item) => total + item.quantity, 0);
                }
                
                cartCount.textContent = totalItems;
                
                // Mise à jour du modal du panier
                const cartItemsContainer = document.getElementById('cart-items');
                const cartTotalPrice = document.getElementById('cart-total-price');
                
                if (totalItems === 0) {
                    cartItemsContainer.innerHTML = `
                        <div class="cart-empty">
                            <i class="fas fa-shopping-cart"></i>
                            <p>Votre panier est vide</p>
                            <a href="#" class="btn">Continuer vos achats</a>
                        </div>
                    `;
                    cartTotalPrice.textContent = '0,00€';
                } else {
                    cartItemsContainer.innerHTML = '';
                    const cart = backend.getCart(backend.currentUser.id);
                    
                    cart.forEach(item => {
                        const cartItemElement = document.createElement('div');
                        cartItemElement.className = 'cart-item';
                        cartItemElement.innerHTML = `
                            <img src="${item.image}" alt="${item.name}" class="cart-item-img">
                            <div class="cart-item-details">
                                <h4 class="cart-item-title">${item.name}</h4>
                                <div class="cart-item-price">${item.price.toFixed(2)}€</div>
                                <div class="cart-item-quantity">
                                    <button class="quantity-btn minus" data-id="${item.productId}">-</button>
                                    <input type="number" value="${item.quantity}" min="1" class="quantity-input" data-id="${item.productId}">
                                    <button class="quantity-btn plus" data-id="${item.productId}">+</button>
                                </div>
                            </div>
                            <button class="remove-item" data-id="${item.productId}"><i class="fas fa-trash"></i></button>
                        `;
                        cartItemsContainer.appendChild(cartItemElement);
                    });
                    
                    cartTotalPrice.textContent = backend.getCartTotal(backend.currentUser.id).toFixed(2) + '€';
                }
            },
            
            // Configuration des écouteurs d'événements
            setupEventListeners: function() {
                // Panier
                document.getElementById('cart-btn').addEventListener('click', (e) => {
                    e.preventDefault();
                    if (!backend.currentUser) {
                        this.showModal('login-modal');
                        return;
                    }
                    this.showModal('cart-modal');
                });
                
                // Connexion/Inscription
                document.addEventListener('click', (e) => {
                    if (e.target.id === 'login-btn' || e.target.closest('#login-btn')) {
                        e.preventDefault();
                        this.showModal('login-modal');
                    } else if (e.target.id === 'register-btn' || e.target.closest('#register-btn')) {
                        e.preventDefault();
                        this.showModal('register-modal');
                    } else if (e.target.id === 'logout-btn' || e.target.closest('#logout-btn')) {
                        e.preventDefault();
                        backend.logoutUser();
                        this.updateAuthUI();
                        this.updateCart();
                    } else if (e.target.id === 'show-register' || e.target.closest('#show-register')) {
                        e.preventDefault();
                        this.hideModal('login-modal');
                        this.showModal('register-modal');
                    } else if (e.target.id === 'show-login' || e.target.closest('#show-login')) {
                        e.preventDefault();
                        this.hideModal('register-modal');
                        this.showModal('login-modal');
                    }
                });
                
                // Fermer les modals
                document.querySelectorAll('.close-modal').forEach(btn => {
                    btn.addEventListener('click', () => {
                        const modal = btn.closest('.modal');
                        this.hideModal(modal.id);
                    });
                });
                
                // Clic à l'extérieur des modals
                window.addEventListener('click', (e) => {
                    if (e.target.classList.contains('modal')) {
                        this.hideModal(e.target.id);
                    }
                });
                
                // Formulaire d'inscription
                document.getElementById('register-form').addEventListener('submit', (e) => {
                    e.preventDefault();
                    const name = document.getElementById('register-name').value;
                    const email = document.getElementById('register-email').value;
                    const password = document.getElementById('register-password').value;
                    const confirmPassword = document.getElementById('register-confirm').value;
                    
                    const result = backend.registerUser({
                        name,
                        email,
                        password,
                        confirmPassword
                    });
                    
                    if (result.success) {
                        alert('Inscription réussie ! Bienvenue chez MUMU-SHOP');
                        this.hideModal('register-modal');
                        this.updateAuthUI();
                        this.updateCart();
                    } else {
                        alert(result.message);
                    }
                });
                
                // Formulaire de connexion
                document.getElementById('login-form').addEventListener('submit', (e) => {
                    e.preventDefault();
                    const email = document.getElementById('login-email').value;
                    const password = document.getElementById('login-password').value;
                    
                    const result = backend.loginUser(email, password);
                    
                    if (result.success) {
                        this.hideModal('login-modal');
                        this.updateAuthUI();
                        this.updateCart();
                    } else {
                        alert(result.message);
                    }
                });
                
                // Newsletter
                document.getElementById('newsletter-form').addEventListener('submit', (e) => {
                    e.preventDefault();
                    const emailInput = e.target.querySelector('input[type="email"]');
                    alert(`Merci pour votre inscription à notre newsletter (${emailInput.value}) !`);
                    emailInput.value = '';
                });
                
                // Ajout au panier
                document.addEventListener('click', (e) => {
                    if (e.target.classList.contains('add-to-cart') || e.target.closest('.add-to-cart')) {
                        const button = e.target.classList.contains('add-to-cart') ? e.target : e.target.closest('.add-to-cart');
                        
                        if (!backend.currentUser) {
                            this.showModal('login-modal');
                            return;
                        }
                        
                        const id = parseInt(button.getAttribute('data-id'));
                        const name = button.getAttribute('data-name');
                        const price = parseFloat(button.getAttribute('data-price'));
                        const image = button.getAttribute('data-image');
                        
                        backend.addToCart(backend.currentUser.id, id);
                        this.updateCart();
                        
                        // Animation de confirmation
                        button.textContent = 'Ajouté !';
                        button.style.backgroundColor = 'var(--success)';
                        setTimeout(() => {
                            button.textContent = 'Ajouter';
                            button.style.backgroundColor = 'var(--primary)';
                        }, 1000);
                    }
                });
                
                // Gestion du panier dans le modal
                document.getElementById('cart-items').addEventListener('click', (e) => {
                    if (!backend.currentUser) return;
                    
                    if (e.target.classList.contains('remove-item') || e.target.closest('.remove-item')) {
                        const button = e.target.classList.contains('remove-item') ? e.target : e.target.closest('.remove-item');
                        const productId = parseInt(button.getAttribute('data-id'));
                        
                        backend.removeFromCart(backend.currentUser.id, productId);
                        this.updateCart();
                    } else if (e.target.classList.contains('minus') || e.target.closest('.minus')) {
                        const button = e.target.classList.contains('minus') ? e.target : e.target.closest('.minus');
                        const productId = parseInt(button.getAttribute('data-id'));
                        
                        const item = backend.getCart(backend.currentUser.id).find(item => item.productId === productId);
                        if (item && item.quantity > 1) {
                            backend.updateCartItem(backend.currentUser.id, productId, item.quantity - 1);
                            this.updateCart();
                        }
                    } else if (e.target.classList.contains('plus') || e.target.closest('.plus')) {
                        const button = e.target.classList.contains('plus') ? e.target : e.target.closest('.plus');
                        const productId = parseInt(button.getAttribute('data-id'));
                        
                        const item = backend.getCart(backend.currentUser.id).find(item => item.productId === productId);
                        if (item) {
                            backend.updateCartItem(backend.currentUser.id, productId, item.quantity + 1);
                            this.updateCart();
                        }
                    }
                });
                
                // Changement de quantité via l'input
                document.getElementById('cart-items').addEventListener('change', (e) => {
                    if (e.target.classList.contains('quantity-input')) {
                        const input = e.target;
                        const productId = parseInt(input.getAttribute('data-id'));
                        const quantity = parseInt(input.value);
                        
                        if (quantity > 0) {
                            backend.updateCartItem(backend.currentUser.id, productId, quantity);
                            this.updateCart();
                        }
                    }
                });
                
                // Passer la commande
                document.getElementById('checkout-btn').addEventListener('click', () => {
                    if (!backend.currentUser) return;
                    
                    const cart = backend.getCart(backend.currentUser.id);
                    if (cart.length === 0) {
                        alert('Votre panier est vide !');
                        return;
                    }
                    
                    const totalItems = cart.reduce((total, item) => total + item.quantity, 0);
                    const totalPrice = backend.getCartTotal(backend.currentUser.id);
                    
                    alert(`Commande passée pour ${totalItems} articles !\nTotal: ${totalPrice.toFixed(2)}€\n\nMerci pour votre achat chez MUMU-SHOP !`);
                    
                    // Vider le panier après la commande
                    backend.currentUser.cart = [];
                    this.updateCart();
                    this.hideModal('cart-modal');
                });
                
                // Filtrage par catégorie
                document.getElementById('categories-container').addEventListener('click', (e) => {
                    if (e.target.tagName === 'A' || e.target.closest('a')) {
                        const link = e.target.tagName === 'A' ? e.target : e.target.closest('a');
                        const categoryId = link.getAttribute('data-category-id');
                        
                        if (categoryId) {
                            e.preventDefault();
                            this.renderProducts(parseInt(categoryId));
                            
                            // Faire défiler jusqu'aux produits
                            document.querySelector('.products').scrollIntoView({
                                behavior: 'smooth'
                            });
                        }
                    }
                });
            },
            
            // Afficher un modal
            showModal: function(modalId) {
                document.getElementById(modalId).style.display = 'block';
                document.body.style.overflow = 'hidden';
            },
            
            // Cacher un modal
            hideModal: function(modalId) {
                document.getElementById(modalId).style.display = 'none';
                document.body.style.overflow = 'auto';
            }
        };
        
        // Initialisation de l'interface utilisateur
        document.addEventListener('DOMContentLoaded', () => UI.init());
    </script>
</body>
</html>