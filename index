    <script>
        // Données simulées pour le backend
        const backend = {
            categories: [
                { id: 1, name: "Vêtements Femmes", image: "https://images.unsplash.com/photo-1539109136881-3be0616acf4b?ixlib=rb-1.2.1&auto=format&fit=crop&w=600&q=80" },
                { id: 2, name: "Vêtements Hommes", image: "https://images.unsplash.com/photo-1551232864-3f0890e580d9?ixlib=rb-1.2.1&auto=format&fit=crop&w=600&q=80" },
                { id: 3, name: "Perruques Naturelles", image: "https://images.unsplash.com/photo-1522335789203-aabd1fc54bc9?ixlib=rb-1.2.1&auto=format&fit=crop&w=600&q=80" },
                { id: 4, name: "Perruques Fantaisie", image: "https://images.unsplash.com/photo-1519699047748-de8e457a634e?ixlib=rb-1.2.1&auto=format&fit=crop&w=600&q=80" }
            ],
            
            products: [
                { 
                    id: 1, 
                    name: "Costume Classique Noir", 
                    price: 129.99, 
                    oldPrice: 185.99, 
                    image: "https://images.unsplash.com/photo-1591047139829-d91aecb6caea?ixlib=rb-1.2.1&auto=format&fit=crop&w=600&q=80",
                    category: 2,
                    isNew: true
                },
                { 
                    id: 2, 
                    name: "Robe de Soirée Élégante", 
                    price: 89.99, 
                    image: "https://images.unsplash.com/photo-1489987707025-afc232f7ea0f?ixlib=rb-1.2.1&auto=format&fit=crop&w=600&q=80",
                    category: 1,
                    isNew: false
                },
                { 
